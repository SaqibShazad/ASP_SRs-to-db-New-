@model webweb.DataAccess.tblParagraph
@{
    ViewBag.Title = "Create";
}
@Styles.Render("~/Content/style.css")
@Scripts.Render("~/bundles/modernizr")


<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-4">
                <h1>Form</h1>
            </div>
            <div class="col-lg-8 col-sm-8">
                <ol class="breadcrumb pull-right">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Login</a></li>
                    <li class="active">Register</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<h3>Textarea</h3>
<p>Please your Requirments into below Text area and Press <code>Generate ERD</code> Button.</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })




        <div class="bs-example">

            @Html.TextAreaFor(model => model.Req_Text)
            @Html.ValidationMessageFor(model => model.Req_Text, "", new { @class = "text-danger" })
         
        </div>
      
    </div>
   



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create Diagram"  class=" btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
